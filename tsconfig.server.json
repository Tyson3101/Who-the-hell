{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "watch": true,
    "target": "esnext",
    "module": "commonjs",

    "outDir": "./dist",
    "rootDir": "./",
    "moduleResolution": "node",

    "lib": ["ESNext"],
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "exclude": ["./dist", "node_modules"],
  "include": ["**/*"]
}
